const cases = [
  {
    title: "Кейс Лизинг",
    category: "Лизинг",
    summary: "Пример кейса в области лизинга.",
    tags: ["лизинг", "финансы"],
    slug: "leasing-case"
  },
  // Добавьте еще два примера для раздела Лизинг
];

